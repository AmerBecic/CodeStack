@model WebApp.EFModels.CategoryItem

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category Item</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId"> @*asp-for="CategoryId" is same as value="@Model.CategoryId" so one is not needed*@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="3" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MediaTypeId" class="control-label"></label>
                <select asp-for="MediaTypeId" class="form-control" asp-items="@Model.MediaTypes">
                    <option value="">--- Please Select a Media Type ----</option>
                </select>
                <span asp-validation-for="MediaTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateItemReleased" class="control-label"></label>
                <input type="text" id="DateItemReleased" name="DateItemReleased" class="form-control datepicker" value="@Model.DateItemReleased.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DateItemReleased" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-categoryId="@Model.CategoryId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_DateScriptsPartial");
     }
}
