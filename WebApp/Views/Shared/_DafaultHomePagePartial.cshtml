@model IEnumerable<Category>

<a id="top"></a>

@*Hero Section*@
<div class="hero section">
    <img class="img-fluid" src="~/assets/HeroImage.jpeg" />
    <div class="hero-heading">
        <h2>Learn Software Development at <strong>CodeStack</strong></h2>
        <a id="HeroRegisterButton" class="btn btn-outline-info btn-lg text-light hero-register-button" data-toggle="modal" data-target="#UserRegistrationModal">Register</a>
    </div>
</div>

<hr class="section-divider" />

@*Courses Section*@
<div id="Courses" class="courses section">
    <h3 class="section-header">Courses</h3>
    @{
        var countRows = Model.Count() / 4;
        var catList = new List<Category>();
    }
    @for (int i = 0; i <= countRows; ++i)
    {
        catList = Model.Skip(i * 4).Take(4).ToList();
        @if (Model.Count() > 0)
        {
            <div class="row mt-3">
                @foreach (Category category in catList)
                {
                    <div class="col-md-3">
                        <a href="#" class="register-link text-dark" data-categoryId="@category.Id">
                            <div class="card">
                                <img class="img-thumbnail" src="@category.ThumbnailImagePath" />
                                <div class="card-body">
                                    <h5 class="card-title">@category.Title</h5>
                                    <p class="card-text">@category.Description</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    }
</div>

<hr class="section-divider" />

@*Contact Section*@
<div id="Contact" class="contact section">
    <h3 class="col-md-5 section-header">Contact Us</h3>
    <div class="col-md-5">
        Email us any questions or inquiries. We would be happy to answer your questions and set up a meeting with you.
    </div>
    <div class="mt-3">
        <div class="col-md-8">
            <form>
                <input type="hidden" />
                <div class="form-group">
                    <label for="Name" class="control-label">Name: </label>
                    <input id="Name" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Email" class="control-label">Email: </label>
                    <input id="Email" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Subject" class="control-label">Subject: </label>
                    <input id="Subject" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="MessageBody" class="control-label">Message: </label>
                    <textarea id="Messagebody" cols="30" rows="10" class="form-control"></textarea>

                </div>
                <div class="form-group d-flex">
                    <input type="button" value="Send Email" class="btn btn-outline-info ml-auto" />
                </div>
            </form>
        </div>
    </div>
</div>

<hr class="section-divider" />
@*About Section*@
<div id="About" class="about-us section">
    <h3 class="col-md-5 section-header"><i class="fas fa-chalkboard-teacher mr-2 text-info"></i>About Us</h3>
    <div class="mt-3 mb-5">
        <div class="col-md-5">
            <p>
                Welcome to <strong>CodeStack</strong>, where innovation meets education! We are a team of technology enthusiasts and educators on a mission to democratize knowledge and skills. <br /><br />
                At CodeStack, we believe that everyone has the potential to become a skilled developer. Whether you're exploring coding for the first time or switching careers, we're here to support you every step of the way.<br /><br />
                Whether you're aiming for a promotion, exploring new technologies, or building advanced projects, CodeStack is the platform where you can refine your skills and thrive in the dynamic world of programming. <br /><br />
                We started in 2024 and continue to provide high quality Tech content to our members.<br />
            </p>
        </div>
    </div>
</div>

<img src="./assets/arrow.png" alt="Back to top" class="arrow-icon-back-to-top" onclick="location.href='./#top'">